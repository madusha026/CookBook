
<style>
  .color{
    color: aliceblue;
  }
  h4{
    color: aliceblue;
  }
</style>


<% if(recipe != null ) { %>

    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%- recipe.title %></li>
      </ol>
    </nav>
  
  
    <div class="row">
  
      <div class="col-12 col-md-4">
        <img src="/uploads/<%- recipe.image %>" class="img-fluid sticky-top" style="top: 20px;" alt="<%= recipe.title %>" loading="lazy">
      </div>
  
      <div class="col-12 col-md-8">
        <div class="color">
        <div class="row">
          <div class="col-12"><h1><%- recipe.title %></h1></div>
          
          <div class="col-12 mb-4"><i class="bi bi-tag"></i> <%- recipe.cooking_time %></div>
          <div class="col-12" style="white-space: pre-line;">
            <h4>Cooking Description</h4>
            <%- recipe.description %>
          </div>
          <div class="col-12" style="white-space: pre-line;">
            <h4>Cooking Instructions</h4>
            <%- recipe.instruction %>
          </div>
        </div>
      </div>
  
        <div class="row pt-4">
          <div class="col-12">
            <h4>Ingredients</h4>
            <ul class="list-group list-group-flush">
              <% recipe.ingredients.forEach(function(ingredients, index){ %>
                <li class="list-group-item"><%= ingredients %></li>
              <% }) %>
            </ul> 
          </div>
        </div>
      </div>
      </div>
    </div>
  <% } else { %>
    <p>No item found.</p>
  <% } %>